<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="2"
    android:padding="12sp"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="387dp"
        android:layout_height="718dp"
        android:background="@drawable/imagg"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="93dp"
            android:layout_height="176dp"
            android:layout_marginLeft="24sp"
            android:layout_marginTop="48sp"
            android:layout_marginRight="11sp"
            android:onClick="dropIn"
            android:padding="14sp"
            android:tag="0"
            app:layout_column="0"
            app:layout_row="0"

            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="98dp"
            android:layout_height="172dp"
            android:layout_marginLeft="11sp"
            android:layout_marginTop="39sp"
            android:layout_marginRight="13sp"
            android:onClick="dropIn"
            android:padding="11sp"
            android:tag="1"
            app:layout_column="1"
            app:layout_row="0"

            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="99dp"
            android:layout_height="206dp"
            android:layout_marginLeft="13sp"
            android:layout_marginTop="28sp"
            android:layout_marginRight="11sp"
            android:onClick="dropIn"
            android:padding="16sp"
            android:tag="2"
            app:layout_column="2"
            app:layout_row="0"

            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="114dp"
            android:layout_height="172dp"
            android:layout_marginLeft="11sp"
            android:onClick="dropIn"
            android:padding="26sp"
            android:tag="3"
            app:layout_column="0"
            app:layout_row="1"

            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="110dp"
            android:layout_height="170dp"
            android:onClick="dropIn"
            android:padding="22sp"
            android:tag="4"
            app:layout_column="1"
            app:layout_row="1"

            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="111dp"
            android:layout_height="168dp"
            android:onClick="dropIn"
            android:padding="22sp"
            android:tag="5"
            app:layout_column="2"
            app:layout_row="1"

            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="119dp"
            android:layout_height="115dp"
            android:layout_marginLeft="11sp"
            android:onClick="dropIn"
            android:padding="25sp"
            android:tag="6"
            app:layout_column="0"
            app:layout_row="2"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="108dp"
            android:layout_height="114dp"
            android:onClick="dropIn"
            android:padding="20sp"
            android:tag="7"
            app:layout_column="1"
            app:layout_row="2"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="107dp"
            android:layout_height="112dp"
            android:onClick="dropIn"
            android:padding="20sp"
            android:tag="8"
            app:layout_column="2"
            app:layout_row="2"
            tools:ignore="SpeakableTextPresentCheck" />

        <LinearLayout
            android:id="@+id/playAgainLayout"
            android:layout_width="109dp"
            android:layout_height="199dp"
            android:alpha="1"
            android:background="#22ADBF"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible"
            app:flow_horizontalAlign="center"
            app:flow_verticalAlign="center"
            app:layout_column="1"
            app:layout_row="1"
            tools:layout_editor_absoluteX="-52dp"
            tools:layout_editor_absoluteY="277dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14sp"
                android:text="Score"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="playAgainBtn"
                android:text="Play Again" />

        </LinearLayout>

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>